<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
     dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="timeline_post_view_pref"
        android:title="@string/timeline_post_view_pref"
        android:defaultValue="large"
        android:entries="@array/timeline_post_view_pref_list_titles"
        android:entryValues="@array/timeline_post_view_pref_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />


    <Preference
        android:title="@string/title_activity_change_password"
        android:summary="">

        <intent
            android:action="dwwen_change_password"
            />
    </Preference>

    <Preference
        android:title="@string/legal"
        android:summary="">
        <intent
            android:action="open_legal"
            />
    </Preference>

    <Preference android:title="@string/logout" android:key="logout"/>

</PreferenceScreen>
